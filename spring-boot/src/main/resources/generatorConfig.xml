<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="Mysql" defaultModelType="flat" targetRuntime="Mybatis3Simple">

        <!-- 配置了autoDelimitKeyWords后，表名或字段名为SQL关键字时，MBG会自动为其添加分隔符 -->
        <property name="autoDelimitKeyWords" value="true"></property>

        <!-- 由于 beginningDelimiter 和 endingDelimiter 两者的默认值为" ,然而mysql中不可以这么写 -->
        <!--应该写为反单引号`（1左边的键）-->
        <property name="beginningDelimiter" value="`"></property>
        <property name="endingDelimiter" value="`"></property>

        <!--要使用的Java文件的编码，默认使用当前平台的编码-->
        <property name="javaFileEncoding" value="UTF-8"></property>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>

        <!--生成的实体类代码中包含注释-->
        <commentGenerator type="com.hand.infra.util.MyCommentGenerator">
            <!--阻止生成注释-->
            <property name="suppressAllComments" value="false"></property>
            <!--阻止生成注释包含时间戳-->
            <property name="suppressDate" value="true"></property>
        </commentGenerator>

        <!--配置数据源-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/sakila"
                        userId="root" password="123456"></jdbcConnection>

        <!--配置实体类的生成-->
        <javaModelGenerator targetPackage="com.hand.domain.entity" targetProject="src/main/java">

            <!--对数据库的查询结果进行trim操作-->
            <property name="trimStrings" value="true"></property>
        </javaModelGenerator>
        
        <sqlMapGenerator targetPackage="com.hand.infra.mapper" targetProject="src/main/resources">
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.hand.infra.mapper" targetProject="src/main/java">

        </javaClientGenerator>
        <table tableName="%"></table>
    </context>
</generatorConfiguration>